<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddressActivity"
    tools:showIn="@layout/activity_address">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <EditText
            android:id="@+id/pincode"
            android:maxLength="6"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:hint="Pincode"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_weight="0.5"
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:hint="City"
                android:textSize="18sp"
                />

            <EditText
                android:layout_weight="0.5"
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:hint="State"
                android:textSize="18sp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/doorno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:hint="Flat/House No/Building"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:hint="Locality/Colony/Street"
            android:textSize="18sp"
            />

         <EditText
             android:id="@+id/person"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="10dp"
             android:hint="Full Name*"
             android:textSize="18sp"
             />
             <LinearLayout
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <EditText
                     android:layout_weight="0.5"
                     android:id="@+id/contact"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="10dp"
                     android:hint="Phone Number"
                     android:maxLength="10"
                     android:inputType="number"
                     android:textSize="18sp"
                     />

                 <EditText
                     android:layout_weight="0.5"
                     android:id="@+id/alternate_contact"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="10dp"
                     android:hint="Alternate Phone No"
                     android:maxLength="10"
                     android:inputType="number"
                     android:textSize="18sp"
                     />

             </LinearLayout>

             <TextView
                 android:textSize="20sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Address Type"/>
             <LinearLayout
                 android:layout_marginBottom="5dp"
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <Button
                     android:id="@+id/house_type"
                     android:text="Home"
                     android:textColor="@color/black_overlay"
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/unselected"
                     />
                 <Button
                     android:id="@+id/office_type"
                     android:text="Office"
                     android:layout_marginLeft="10dp"
                     android:textColor="@color/black_overlay"
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/unselected"
                     />
                 <Button
                     android:id="@+id/other_type"
                     android:layout_marginLeft="10dp"
                     android:text="Other"
                     android:textColor="@color/black_overlay"
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:background="@drawable/unselected"
                     />


             </LinearLayout>

             <Switch
                 android:id="@+id/default_address"
                 android:layout_marginTop="10dp"
                 android:textColor="@color/black_overlay"
                 android:text="Make this default address"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />

                <LinearLayout
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <Button
                     android:id="@+id/cancel_address"
                     android:background="@drawable/unselected"
                     android:layout_marginRight="10dp"
                     android:layout_marginLeft="10dp"
                     android:text="Cancel"
                     android:layout_weight="0.5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                 <Button
                     android:id="@+id/save_address"
                     android:textColor="@color/white"
                     android:background="@drawable/selectedbutton"
                     android:layout_marginRight="10dp"
                     android:layout_marginLeft="10dp"
                     android:text="Save"
                     android:layout_weight="0.5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />


             </LinearLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>