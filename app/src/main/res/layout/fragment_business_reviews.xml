<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".BusinessActivity$PlaceholderFragment">

    <LinearLayout
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/product_rating_text"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="55dp"
            android:src="@drawable/selected_star" />


    </LinearLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black_overlay"
        android:id="@+id/product_rating_reviews"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="0 ratings , 0 reviews"/>

    <Button
        android:background="@drawable/selected"
        android:layout_marginTop="10dp"
        android:id="@+id/rate_and_review_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate and Review"
        android:textColor="@color/colorPrimary"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/business_reviews"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>